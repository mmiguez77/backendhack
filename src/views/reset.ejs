<%- include ('./layouts/header') -%>
    <%- include ('./layouts/navbar') -%>

        <div class="container mt-5">
            <% if (url !='' ) { %>

                <h3 style="text-align:center" class="my-4">RECUPERAR CONTRASEÑA</h3>
                <form method="POST" action="/user/password-reset/<%= url %>" autocomplete="off">
                    <div class="input-group mb-3">
                       
                        <input type="password" class="form-control" id="password" placeholder="Contraseña"
                            aria-label="Recipient's password" aria-describedby="button-addon2" name="password"
                            required>
                       

                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Enviar
                            </button>
                        </div>
                    </div>
                </form>
             
                
                <% } %>
                   

        </div>

        <div class="container mt-4">
            <div class="input-group-append">
                <a href="/user/register">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Registrarse</button>
                </a>
            </div>

        </div>

